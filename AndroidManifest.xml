<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharpersharp.tomylove"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sharpersharp.tomylove.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sharpersharp.tomylove.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="com.sharpersharp.tomylove.UploadActivity"
            android:label="@string/title_activity_upload" >
        </activity>
        <activity
            android:name="com.sharpersharp.tomylove.SendActivity"
            android:label="@string/title_activity_send" >
        </activity>
        <activity
            android:name="com.sharpersharp.tomylove.CustomeGalleryActivity"
            android:label="@string/title_activity_custome_gallery" >
        </activity>
    </application>

</manifest>
